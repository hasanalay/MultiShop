    <None Remove="Dtos\ProductDetailDtos\" />
    <None Remove="Dtos\ProductImageDtos\" />
    <None Remove="Dtos\ProductDtos\" />
    <None Remove="Mapping\" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Controllers\" />
    <Folder Include="Entities\" />
    <Folder Include="Settings\" />
    <Folder Include="Dtos\" />
